// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())
  mistakes  Mistake[]
}

model Mistake {
  id              String  @id @default(uuid())
  userId          String
  gameType        String
  incorrectLetter String
  correctLetter   String
  word            String
  createdAt       DateTime @default(now())
}
