// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())
  mistakes  Mistake[]
}

model Mistake {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  gameType  String   // e.g., "LetterPopper", "SpellingSafari"
  letter    String   // Letter the user struggled with
  word      String   // The word they were trying to spell
  timeTaken Int?     // Time taken in seconds (optional)
  createdAt DateTime @default(now())
}
